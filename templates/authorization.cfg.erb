# File managed by Puppet

authorize "<%= @identity %>" {
    password = "<%= @password %>"

<% if @commands != '' %>
    commands = { "<%= @commands.join('", "') %>" }
<% end %>

<% if @services != '' %>
    services = { "<%= @services.join('", "') %>" }
<% end %>

<% if @hosts != '' %>
    hosts = { "<%= @hosts.join('", "') %>" }
<% end %>

}
